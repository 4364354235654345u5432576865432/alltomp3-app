{
  "name": "AllToMP3",
  "version": "0.2.0",
  "description": "Download YouTube videos in MP3 with tags and lyrics",
  "main": "main.js",
  "repository": "git@github.com:AllToMP3/alltomp3-app.git",
  "author": "Basile Bruneau <basilebruneau@gmail.com>",
  "license": "GPL-2.0",
  "homepage": "https://alltomp3.org/",
  "dependencies": {
    "alltomp3": "https://github.com/AllToMP3/alltomp3",
    "electron-updater": "^1.7.1",
    "ncp": "^2.0.0",
    "nedb-promise": "^2.0.1"
  },
  "devDependencies": {
    "electron": "^1.6.2",
    "electron-builder": "^15.4.3",
    "electron-rebuild": "^1.5.7"
  },
  "build": {
    "appId": "org.alltomp3.app",
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "bin",
      "bin/**"
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "linux": {
      "target": "deb",
      "executableName": "alltomp3",
      "category": "AudioVideo",
      "packageCategory": "sound"
    },
    "dmg": {
      "title": "AllToMP3",
      "icon": "build/dmg.icns",
      "contents": [
        {
          "x": 0,
          "y": 90
        },
        {
          "x": 220,
          "y": 90,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "iconSize": 100,
      "window": {
        "width": 400,
        "height": 180
      }
    },
    "directories": {
      "app": "."
    },
    "files": [
      "!**/app/node_modules",
      "!**/app/src"
    ],
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "scripts": {
    "pack": "build --dir",
    "dist": "build",
    "release": "build"
  },
  "postinstall": "install-app-deps"
}
